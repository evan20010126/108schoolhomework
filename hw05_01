#include <iostream>
using namespace std;

int main (int argc,char** argv){
	
	int a,b;
	float total,total1;
	
	cout << "Integer1:";
	cin  >> a;
	cout << "Integer2:";
	cin  >> b;
	cout << "Result1:";
	for (int i=1 ; i<=a ; i++){
		if (i%2==1){
			total = total + (1.0/i);
		}else if (i%2==0){
			total = total - (1.0/i);
		}	
	}
	
	cout  << total <<endl;
	
	cout << "Result2:";
	
	for (int i=1 ; i<=b ; i++){
		if (i%2==1){
			total1 = total1 + (1.0/i);
		}else if (i%2==0){
			total1 = total1 - (1.0/i);
		}	
	}
	
	cout  << total1 ;
	return 0;
} 
